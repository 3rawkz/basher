#!/usr/bin/env bash
# Summary: Installs a package from github
# Usage: basher install <package>

set -e

if [ "$#" -ne 1 ]; then
  basher-help install
  exit 1
fi

package="$1"

if [ -z "$package" ]; then
  basher-help install
  exit 1
fi

IFS=/ read -r user name <<< "$package"

if [ -z "$user" ]; then
  basher-help install
  exit 1
fi

if [ -z "$name" ]; then
  basher-help install
  exit 1
fi

basher-clone "$package"

shopt -s nullglob

if [ -e "$BASHER_PACKAGES_PATH/$package/package.sh" ]; then
  source "$BASHER_PACKAGES_PATH/$package/package.sh" # TODO: make this secure?
  IFS=: read -a bins <<< "$BIN"
else
  echo "WARNING: package.sh not found, linking any binaries in bin directory"
  bins=($BASHER_PACKAGES_PATH/$package/bin/*)
  bins=("${bins[@]##*/}")
  bins=("${bins[@]/#/bin/}")
fi

for bin in "${bins[@]}"
do
  ln -sf "$BASHER_PACKAGES_PATH/$package/$bin" "$BASHER_ROOT/cellar/bin/${bin##*/}"
done
