#!/usr/bin/env bash
# Summary: Installs a module from github
# Usage: basher install <user> <module>

username="$1"
module="$2"

if [ -z "$username" ]; then
  basher-help install
  exit 1
fi

if [ -z "$module" ]; then
  basher-help install
  exit 1
fi

git clone "git://github.com/$username/$module.git" "$BASHER_ROOT/modules/$module"
