#!/usr/bin/env bash
# Summary: Installs a package from github
# Usage: basher install <user> <package>

username="$1"
package="$2"

if [ -z "$username" ]; then
  basher-help install
  exit 1
fi

if [ -z "$package" ]; then
  basher-help install
  exit 1
fi

git clone "git://github.com/$username/$package.git" "${BASHER_PACKAGES_PATH}/$package"

shopt -s nullglob

for bin in ${BASHER_PACKAGES_PATH}/$package/bin/*
do
  ln -s $bin "$BASHER_ROOT/cellar/bin/${bin##*/}"
done
